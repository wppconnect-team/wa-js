{
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "JSX.createElement",
    "jsxFragmentFactory": "JSX.Fragment",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./theme-dist",
    "removeComments": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "target": "ES2017"
  },
  "include": [
    "theme-src/**/*"
  ]
}
